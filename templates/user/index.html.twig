{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div id="show_header">
    <h1>Usuarios</h1>
</div>
    <table class="table">
        <thead>
            <tr>
                <th>Email</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Nick</th>
                <th>Phone</th>
                <th>Admin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
        {% if user.email != 'aesmart@gmail.com' %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.Name }}</td>
                <td>{{ user.Surname }}</td>
                <td>{{ user.Nick }}</td>
                <td>{{ user.Phone }}</td>
                <td>{{ 'ROLE_ADMIN' in user.roles ? 'SI' : 'NO' }}</td>
                <td class="actions">
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn show">Ver detalles</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn edit">Editar</a>
                    {{ include('user/_delete_form.html.twig') }}
                </td>
            </tr>
            {% endif %}
        {% else %}
            <tr>
                <td colspan="10">No se ha encontrado ning√∫n registro de usuario</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
