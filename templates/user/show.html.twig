{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div id="show_header">
    <h1>Usuario {{ user.Name }}</h1>
    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn edit page">{{ ux_icon('bi:pencil') }} Editar</a>
</div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ user.Name }}</td>
            </tr>
            <tr>
                <th>Apellido</th>
                <td>{{ user.Surname }}</td>
            </tr>
            <tr>
                <th>Nick</th>
                <td>{{ user.Nick }}</td>
            </tr>
            <tr>
                <th>Teléfono</th>
                <td>{{ user.Phone }}</td>
            </tr>
            <tr>
                <th>Admin</th>
                <td>{{ 'ROLE_ADMIN' in user.roles ? 'SI' : 'NO' }}</td>
            </tr>
        </tbody>
    </table>

<div id="delwork">
    <a href="{{ path('app_user_index') }}" class="btn back">Atrás</a>
    <div>{{ include('user/_delete_form.html.twig') }}</div>
</div>
{% endblock %}
