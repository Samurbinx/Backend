</head>

<body>
    <div class="header">
        <button class="mobile btn" data-bs-toggle="offcanvas" href="#offcanvas" aria-controls="offcanvas" type="button">{{ ux_icon('bi:list') }}</button> 
        <a href="http://localhost:4200/home" target="_blank" id="brand">ANA ESTRADA MACÍAS</a>
        <a href="http://localhost:4200/home" target="_blank" id="brand_small">AESMA</a>
        <div class="second_header">
            <p id="welcome_msg">Bienvenido, {{ app.user.nick }}!</p>
            <a id="logout_icon" href="{{ path('app_logout')}}">{{ ux_icon('tabler:logout') }}</a>
        </div>
    </div>

    <div class="body">
        <div class="sidebar" id="sidebar">
            <a href="{{ path('app_page_show', {'id': 1}) }}">Inicio</a>
            <a href="{{ path('app_page_show', {'id': 2}) }}">Contacto</a>
            <a href="{{ path('app_page_show', {'id': 3}) }}">Sobre mí</a>
            <a href="{{ path('app_page_show', {'id': 4}) }}">Login</a>
            <br>
            <a href="{{ path('app_work_index') }}">Proyectos</a>
            <a href="{{ path('app_materials_index') }}">Materiales</a>
            <a href="{{ path('app_user_index') }}">Usuarios</a>
            <a href="{{ path('app_order_index') }}">Pedidos</a>
        </div>
        <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvas" aria-labelledby="offcanvasLabel">
            <div class="offcanvas-header">
              <h5 class="offcanvas-title" id="offcanvasLabel">AESMA</h5>
              <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <p><a href="{{ path('app_page_show', {'id': 1}) }}">Inicio</a></p>
                <p><a href="{{ path('app_page_show', {'id': 2}) }}">Contacto</a></p>
                <p><a href="{{ path('app_page_show', {'id': 3}) }}">Sobre mí</a></p>
                <p><a href="{{ path('app_page_show', {'id': 4}) }}">Login</a></p>
                <br>
                <p><a href="{{ path('app_work_index') }}">Proyectos</a></p>
                <p><a href="{{ path('app_materials_index') }}">Materiales</a></p>
                <p><a href="{{ path('app_user_index') }}">Usuarios</a></p>
                <p><a href="{{ path('app_order_index') }}">Pedidos</a></p>
                <br>
                <p><a href="{{ path('app_logout')}}">{{ ux_icon('tabler:logout') }}</a> Cerrar sesión</p>
                    
            </div>
          </div>
        <div class="content">
            {% block body %}{% endblock %}
        </div>
    </div>

