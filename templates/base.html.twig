<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Administración AESMA</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@100..900&family=Outfit:wght@100..900&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <link href="{{ asset('css/general/styles.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/general/buttons.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/general/forms.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/general/tables.css') }}" rel="stylesheet"/>

    <link href="{{ asset('css/components/page.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/components/artwork.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/components/piece.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/components/work.css') }}" rel="stylesheet"/>
    


</head>

<body>
    <div class="header">
        <p class="list_menu" onclick="openMenu()" id="list_menu">{{ ux_icon('bi:list') }}</p> 
        <a href="http://localhost:4200/home" target="_blank" id="brand">ANA ESTRADA MACÍAS</a>
        <a href="http://localhost:4200/home" target="_blank" id="brand_small">AESMA</a>
        <div class="second_header">
            <p id="welcome_msg">Bienvenido, {{ app.user.nick }}!</p>
            <a id="logout_icon" href="{{ path('app_logout')}}">{{ ux_icon('tabler:logout') }}</a>
        </div>
    </div>

    <div class="body">
        <div class="sidebar" id="sidebar">
            <a href="{{ path('app_page_show', {'id': 1}) }}">Inicio</a>
            <a href="{{ path('app_page_show', {'id': 2}) }}">Contacto</a>
            <a href="{{ path('app_page_show', {'id': 3}) }}">Sobre mí</a>
            <a href="{{ path('app_page_show', {'id': 4}) }}">Login</a>
            <br>
            <a href="{{ path('app_work_index') }}">Proyectos</a>
            <a href="{{ path('app_user_index') }}">Usuarios</a>
        </div>
    
        <div class="content">
            <div id="blurr" onclick="closeMenu()"></div>
            {% block body %}{% endblock %}
        </div>
    </div>

    <script>
 
        function openMenu() {
            document.getElementById("sidebar").style.display = "block";
            document.getElementById("blurr").style.display = "block";
        }

    </script>
</body>
</html>
