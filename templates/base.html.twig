<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Administración AESMA</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@100..900&family=Outfit:wght@100..900&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <link href="{{ asset('css/general/styles.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/general/buttons.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/general/forms.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/general/tables.css') }}" rel="stylesheet"/>

    <link href="{{ asset('css/components/page.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/components/artwork.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/components/piece.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/components/work.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/components/material.css') }}" rel="stylesheet"/>
