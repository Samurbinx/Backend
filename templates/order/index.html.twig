{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div id="show_header">
    <h1>Usuarios</h1>
</div>
<table class="table">
    <thead>
        <tr>
            <th>ID pedido</th>
            <th>ID usuario</th>
            <th>Fecha</th>
            <th>Precio total</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {% if orders %}
        {% for order in orders %}
        <tr>
            <td>{{ order.id }}</td>
            <td>{{ order.User.id }}</td>
            <td>{{ order.date }}</td>
            <td>{{ order.totalAmount }} €</td>
            <td class="actions">
                {{ include('order/_delete_form.html.twig') }}
            </td>
        </tr>

        {% endfor %}
        {% else %}
        <tr>
            <td colspan="10">No se ha encontrado ningún registro de pedido</td>
        </tr>
        {% endif %}
    </tbody>
</table>

{% endblock %}